<?xml version="1.0" encoding="utf-8"?>

<ClassicalProbability> 
  <Experiment> 
    <!--试验-->  
    <ExperimentObject> 
      <!--试验对象-->  
      <ObjectName>球</ObjectName>  
      <!--对象名称-->  
      <ObjectTotality>25</ObjectTotality>  
      <!--对象总数，如果未知，用n表示-->  
        <DiscreteName>白球;黄球;黑球</DiscreteName>  
        <!--离散值域的名称-->  
        <DomainQuantity>10;5;10</DomainQuantity>  
        <!--离散值的数量，默认值为1-->  
    </ExperimentObject>  
      <ExperimentMethod> 
        <SamplingWay>1</SamplingWay>  <!--抽取方式：放回(0)与不放回(1)，默认值是1-->  
        <SamplingQuantity>1</SamplingQuantity>  
        <!--抽取的数量-->  
        <SortingWay>1</SortingWay>  <!--排序方式：有序(0)和无序(1)，默认值是1--> 
      </ExperimentMethod>   
    <ExperimentTimes>1</ExperimentTimes>  <!--试验次数，默认值为1-->
    <ExperimentResult> 
        <DiscreteName>黑球</DiscreteName>   
        <DomainQuantity>null</DomainQuantity><!--实验结果离散值的数量，默认值为1--> 
    </ExperimentResult>
  </Experiment>
  <Question>
    <EventName>从盒子中任意取出一球，已知它不是白球，则它是黑球的概率</EventName>
    <ResultFilter>
    	不是(白球);是(黑球)
    </ResultFilter>
    <Probability>null</Probability>
  </Question>
</ClassicalProbability> 

<!--
盒子里有25个外形相同的球，其中10个白的，5个黄的，10个黑的，从盒子中任意取出一球，已知它不是白球，则它是黑球的概率为??
-->