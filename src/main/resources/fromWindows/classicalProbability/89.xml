<ClassicalProbability> 
  <Experiment> 
    <!--试验-->  
    <ExperimentObject> 
      <!--试验对象-->  
      <ObjectName>运动服</ObjectName>  
      <!--对象名称-->  
      <ObjectTotality>3</ObjectTotality>  
      <!--对象总数，如果未知，用n表示-->  
