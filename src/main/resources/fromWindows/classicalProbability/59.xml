      </ExperimentMethod>   
    <ExperimentTimes>3</ExperimentTimes>  <!--试验次数，默认值为1-->
    <ExperimentResult> 
        <DiscreteName>null</DiscreteName>   
        <DomainQuantity>null</DomainQuantity><!--实验结果离散值的数量，默认值为1--> 
    </ExperimentResult>
  </Experiment>
  <Question>
    <EventName>三次颜色恰有两次同色的概率</EventName>
    <ResultFilter>
    	同色(3,2)
    </ResultFilter>
    <Probability>null</Probability>
  </Question>
