<?xml version="1.0" encoding="utf-8"?>

<ClassicalProbability> 
  <Experiment> 
    <!--试验-->  
    <ExperimentObject> 
      <!--试验对象-->  
      <ObjectName>球</ObjectName>  
      <!--对象名称-->  
      <ObjectTotality>null</ObjectTotality>  
      <!--对象总数，如果未知，用n表示-->  
        <DiscreteName>红球;白球</DiscreteName>  
        <!--离散值域的名称-->  
        <DomainQuantity>1;1</DomainQuantity>  
        <!--离散值的数量，默认值为1-->  
