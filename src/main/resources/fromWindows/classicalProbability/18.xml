<?xml version="1.0" encoding="utf-8"?>

<ClassicalProbability> 
  <Experiment> 
    <!--试验-->  
    <ExperimentObject> 
      <!--试验对象-->  
      <ObjectName>螺丝钉</ObjectName>  
      <!--对象名称-->  
      <ObjectTotality>8</ObjectTotality>  
      <!--对象总数，如果未知，用n表示-->  
        <DiscreteName>坏螺丝钉;好螺丝钉</DiscreteName>  
        <!--离散值域的名称-->  
        <DomainQuantity>2;null</DomainQuantity>  
        <!--离散值的数量，默认值为1-->  
    </ExperimentObject>  
      <ExperimentMethod> 
        <SamplingWay>1</SamplingWay>  <!--抽取方式：放回(0)与不放回(1)，默认值是1-->  
        <SamplingQuantity>4</SamplingQuantity>  
        <!--抽取的数量-->  
        <SortingWay>1</SortingWay>  <!--排序方式：有序(0)和无序(1)，默认值是1--> 
      </ExperimentMethod>   
    <ExperimentTimes>1</ExperimentTimes>  <!--试验次数，默认值为1-->
    <ExperimentResult> 
        <DiscreteName>null</DiscreteName>   
        <DomainQuantity>null</DomainQuantity><!--实验结果离散值的数量，默认值为1--> 
    </ExperimentResult>
  </Experiment>
  <Question>
    <EventName>从盒子中随机地抽取4只，恰好有1只是坏的概率</EventName>
    <ResultFilter>
    	有(坏)=1
    </ResultFilter>
    <Probability>null</Probability>
  </Question>
</ClassicalProbability> 

<!--
盒子中有8只螺丝钉，其中仅有2只是坏的.现从盒子中随机地抽取4只，恰好有1只是坏的概率等于_______
-->