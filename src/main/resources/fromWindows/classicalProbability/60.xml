<?xml version="1.0" encoding="utf-8"?>

<ClassicalProbability> 
  <Experiment> 
    <!--试验-->  
    <ExperimentObject> 
      <!--试验对象-->  
      <ObjectName>铁钉</ObjectName>  
      <!--对象名称-->  
      <ObjectTotality>10</ObjectTotality>  
      <!--对象总数，如果未知，用n表示-->  
        <DiscreteName>合格;不合格</DiscreteName>  
        <!--离散值域的名称-->  
        <DomainQuantity>8;2</DomainQuantity>  
        <!--离散值的数量，默认值为1-->  
    </ExperimentObject>  
      <ExperimentMethod> 
        <SamplingWay>1</SamplingWay>  <!--抽取方式：放回(0)与不放回(1)，默认值是1-->  
        <SamplingQuantity>1</SamplingQuantity>  
        <!--抽取的数量-->  
        <SortingWay>1</SortingWay>  <!--排序方式：有序(0)和无序(1)，默认值是1--> 
      </ExperimentMethod>   
    <ExperimentTimes>1</ExperimentTimes>  <!--试验次数，默认值为1-->
    <ExperimentResult> 
        <DiscreteName>null</DiscreteName>   
        <DomainQuantity>null</DomainQuantity><!--实验结果离散值的数量，默认值为1--> 
    </ExperimentResult>
  </Experiment>
  <Question>
    <EventName>任取一个恰为合格铁钉的概率</EventName>
    <ResultFilter>
    	合格(铁钉)=1
    </ResultFilter>
    <Probability>null</Probability>
  </Question>
</ClassicalProbability>

<!--
盒中有10个铁钉，其中8个是合格的，2个是不合格的，从中任取一个恰为合格铁钉的概率是( )
-->