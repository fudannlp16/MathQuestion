<?xml version="1.0" encoding="utf-8"?>

<ClassicalProbability> 
  <Experiment> 
    <!--试验-->  
    <ExperimentObject> 
      <!--试验对象-->  
      <ObjectName>球</ObjectName>  
      <!--对象名称-->  
      <ObjectTotality>3</ObjectTotality>  
      <!--对象总数，如果未知，用n表示-->  
        <DiscreteName>红球;黄球;白球</DiscreteName>  
        <!--离散值域的名称-->  
        <DomainQuantity>1;1;1</DomainQuantity>  
        <!--离散值的数量，默认值为1-->  
    </ExperimentObject>  
      <ExperimentMethod> 
        <SamplingWay>0</SamplingWay>  <!--抽取方式：放回(0)与不放回(1)，默认值是1-->  
        <SamplingQuantity>1</SamplingQuantity>  
        <!--抽取的数量-->  
        <SortingWay>1</SortingWay>  <!--排序方式：有序(0)和无序(1)，默认值是1--> 
      </ExperimentMethod>   
    <ExperimentTimes>3</ExperimentTimes>  <!--试验次数，默认值为1-->
    <ExperimentResult> 
        <DiscreteName>红球</DiscreteName>   
        <DomainQuantity>3</DomainQuantity><!--实验结果离散值的数量，默认值为1--> 
    </ExperimentResult>
  </Experiment>
  <Question>
    <EventName>有放回地抽取3次，求3个全是红球的概率</EventName>
    <ResultFilter>
    	全是红球(x1,x2,x3)
    </ResultFilter>
    <Probability>null</Probability>
  </Question>
</ClassicalProbability> 

<!--
袋中有除颜色外完全相同的红、黄、白三种颜色的球各一个，从中每次任取1个．有放回地抽取3次，求3个全是红球的概率.
-->