<?xml version="1.0" encoding="utf-8"?>

<ClassicalProbability> 
  <Experiment> 
    <!--试验-->  
    <ExperimentObject> 
      <!--试验对象-->  
      <ObjectName>球</ObjectName>  
      <!--对象名称-->  
      <ObjectTotality>5</ObjectTotality>  
      <!--对象总数，如果未知，用n表示-->  
        <DiscreteName>红球;白球;黑球</DiscreteName>  
        <!--离散值域的名称-->  
        <DomainQuantity>1;2;2</DomainQuantity>  
        <!--离散值的数量，默认值为1-->  
    </ExperimentObject>  
      <ExperimentMethod> 
        <SamplingWay>1</SamplingWay>  <!--抽取方式：放回(0)与不放回(1)，默认值是1-->  
        <SamplingQuantity>2</SamplingQuantity>  
        <!--抽取的数量-->  
        <SortingWay>1</SortingWay>  <!--排序方式：有序(0)和无序(1)，默认值是1--> 
      </ExperimentMethod>   
    <ExperimentTimes>1</ExperimentTimes>  <!--试验次数，默认值为1-->
    <ExperimentResult> 
        <DiscreteName>白球;黑球</DiscreteName>   
        <DomainQuantity>1;1</DomainQuantity><!--实验结果离散值的数量，默认值为1--> 
    </ExperimentResult>
  </Experiment>
  <Question>
    <EventName>袋中任取两球，两球颜色为一白一黑的概率</EventName>
    <ResultFilter>
    	为(白,黑)
    </ResultFilter>
    <Probability>null</Probability>
  </Question>
</ClassicalProbability> 

<!--
袋中共有5个除颜色外完全相同的小球，其中1个红球，2个白球和2个黑球，从袋中任取两球，两球颜色为一白一黑的概率等于(? )
-->