      <!--试验对象-->  
      <ObjectName>同学</ObjectName>  
      <!--对象名称-->  
      <ObjectTotality>4</ObjectTotality>  
      <!--对象总数，如果未知，用n表示-->  
        <DiscreteName>男同学;女同学</DiscreteName>  
        <!--离散值域的名称-->  
        <DomainQuantity>3;1</DomainQuantity>  
        <!--离散值的数量，默认值为1-->  
    </ExperimentObject>  
      <ExperimentMethod> 
        <SamplingWay>1</SamplingWay>  <!--抽取方式：放回(0)与不放回(1)，默认值是1-->  
        <SamplingQuantity>2</SamplingQuantity>  
        <!--抽取的数量-->  
        <SortingWay>1</SortingWay>  <!--排序方式：有序(0)和无序(1)，默认值是1--> 
      </ExperimentMethod>   
    <ExperimentTimes>1</ExperimentTimes>  <!--试验次数，默认值为1-->
    <ExperimentResult> 
        <DiscreteName>null</DiscreteName>   
        <DomainQuantity>null</DomainQuantity><!--实验结果离散值的数量，默认值为1--> 
    </ExperimentResult>
  </Experiment>
  <Question>
    <EventName>选派的都是男生的概率</EventName>
    <ResultFilter>
    	都是(男生)
    </ResultFilter>
    <Probability>null</Probability>
  </Question>
</ClassicalProbability> 

